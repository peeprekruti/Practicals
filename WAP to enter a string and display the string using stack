#include <stdio.h>
#include <string.h>

#define MAX 50

int main() {
    char str[MAX];
    char stack[MAX][MAX];
    int top = -1;
    int i = 0, j = 0;

    printf("Enter a string:\n");
    gets(str);

    while (1) {
        if (str[i] == ' ' || str[i] == '\0') {
            stack[++top][j] = '\0';
            j = 0;
            if (str[i] == '\0')
                break;
        } else {
            stack[top + 1][j++] = str[i];
        }
        i++;
    }

    printf("\nReversed string using stack:\n");
    while (top >= 0) {
        printf("%s ", stack[top--]);
    }

    return 0;
}
